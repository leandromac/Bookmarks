<script>
    $.notify("<%= notice %>", "success");
</script>


<div class="dual-list list-left col-md-12">
    <div class="text-left">
        <ul class="list-group" style="margin-left:0px">
            <input type="text" name="SearchDualList" class="form-control" placeholder="Search your bookmarks here..." />

            <div class="container">
                <% @booksmarks.each do |booksmark| %>
                	<li class="list-group-item">
                        <div class="notice notice-warning">
                         <%= link_to 'Edit', edit_booksmark_path(booksmark), :class => "tiny button warning" %>
                            <strong><%= link_to booksmark.title, booksmark.url, :target => "_blank" %> </strong>
                        </div>
                    </li>
                <% end %>
            </div>
        </ul>
    </div>
</div>


 <script type="text/javascript" defer>
 function fetchUrl() {
   var url = document.getElementById( "booksmark_url" ).value;
   $.ajax({
       type: 'GET',
       url: "/booksmarks/get_title?url=" + url,
       success: function(data){
           $("#booksmark_title").val(data);
       },
       dataType: 'text'
   });
 }
</script>