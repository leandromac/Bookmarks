<script>
    $.notify("<%= notice %>", "success");
</script>

<div class="dual-list">
  <ul class="list-group" style="margin-left:0px">
    <div class="form-group has-warning">
      <input type="text" name="SearchDualList" class="form-control input-lg" placeholder="Search your bookmark here..." />
    </div>
      <% @booksmarks.each do |booksmark| %>
      	<li>
          <div class="notice notice-warning">
            <strong><%= link_to booksmark.title, booksmark.url, :target => "_blank" %> </strong>
            <%= link_to edit_booksmark_path(booksmark), :class => "btn btn-warning pull-right" do %>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            <% end %>
          </div>
          </li>
      <% end %>
  </ul>
</div>

<script type="text/javascript" defer>
  function fetchUrl() {
   var url = document.getElementById( "booksmark_url" ).value;
   $.ajax({
       type: 'GET',
       url: "/booksmarks/get_title?url=" + url,
       success: function(data){
           $("#booksmark_title").val(data);
       },
       dataType: 'text'
   });
  }
</script>