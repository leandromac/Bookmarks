<p id="notice"><%= notice %></p>

<%= form_for(@booksmark) do |f| %>
<div class="row col-md-12 columns">
<div class="text-center">
    <div class="input-group">
        <%= f.text_field :url, :onBlur => "fetchUrl()", class: "input-group-field", placeholder: "Type here your URL..." %>
        <div class="input-group-button">
              <%= f.submit "Create", :class => "button success" %>

        <%#= link_to 'Create a new bookmark', new_booksmark_path, :class => "button success" %>
        </div>
    </div>
</div>
</div>
<% end %>

<div class="dual-list list-left col-md-12 columns">
    <div class="text-left">
    <ul class="list-group callout large">
                    <div class="row">
        <div class="col-md-12">
        <input type="text" name="SearchDualList" class="form-control" placeholder="Search your bookmarks here..." />
        </div>
        </div>
<% @booksmarks.each do |booksmark| %>

	<li class="list-group-item">
    	<h6>
			<%= link_to 'Edit', edit_booksmark_path(booksmark), :class => "tiny button warning" %>
    	<%= link_to booksmark.title, booksmark.url, :target => "_blank" %>

    	</h6>

    </li>
<% end %>


           </ul>
            </div>
        </div>